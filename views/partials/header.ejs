<header style="height: 100px;">
  <nav class="navbar navbar-expand-md navbar-dark bg-success h-100">
    <h1 class="navbar-brand font-weight-bold" style="font-size: 2rem;">TinyLinks</h1>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav d-flex justify-content-between w-100">
        <div class="d-flex">
          <a class="nav-item nav-link font-weight-bold" style="font-size:1.2rem;" href="/urls">My URLs</a>
          <a class="nav-item nav-link font-weight-bold" style="font-size:1.2rem;" href="/urls/new">Create New URL</a>
        </div>
        <div class="d-flex">
          <% if(user){ %>
            <span class="nav-item nav-link font-weight-bold" style="font-size:1.2rem;"><%= user ? `Welcome ${user.name}!! You are logged in.` : ''; %></span>
            <form action="/auth/logout" method="post">
              <button type="submit" class='<%= user? "btn btn-danger" :''; %>'><%= user? 'Logout': ''; %></button>
            </form>
          <% }else{ %>
            <a class="nav-item nav-link font-weight-bold" style="font-size:1.2rem;" href="/auth/login"><%= user? '': 'Login'; %></a>
            <a class="nav-item nav-link font-weight-bold" style="font-size:1.2rem;" href="/auth/register"><%= user? '': 'Register'; %></a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>
